<div class="post-card">
  <div class="post-card-header">
    {{post}}
    <small>Posted by {{author}}</small>
    <button class="btn btn-sm btn-primary edit-button">Edit</button>
    <button class="btn btn-sm btn-danger delete-button">Delete</button>
    <button class="btn btn-sm btn-success save-button" style="display: none">Save</button>
  </div>
  <div class="card-body">
    <p>
      Comments:
      {{comments}}
      <button class="btn btn-sm btn-primary add-comment-button">Add Comment</button>
      <div class="comment-form" style="display: none">
        <input type="text" id="comment" name="comment" placeholder="Enter your comment...">
        <button type="button" class="btn btn-primary add-comment-btn">Add Comment</button>
        <button type="button" class="btn btn-secondary cancel-comment-btn">Cancel</button>
        <div class="comments-list"></div>
        <div class="comment-count">0 comments</div>
        <button class="btn btn-danger delete-comment-btn" style="display: none"></button>
        
      </div>

    </p>

    <div>
    <h2>Create a New Post</h2>
    <form id="postForm" action="/posts" method="POST">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>
      <label for="body">Body:</label>
      <textarea id="body" name="body" required></textarea>
      <button type="submit" class="btn">Submit</button>
      {{#if error}}
      <p class="error">{{error}}</p>
      {{/if}}
      
  </div>
  </div>
</div>